<%= render "layouts/navbar" %>
<div class="container">
<h2>Sign up</h2>
<div class="row">
	<div class="col-lg-12">
<h2>Your Information</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-vertical' }) do |f| %>
      <%= devise_error_messages! %>
     <div><%= f.label :first_name %> 
    <%= f.text_field :first_name, autocomplete: "off", class: "form-control" %></div>
     <div><%= f.label :last_name %> 
    <%= f.text_field :last_name, class: "form-control" %></div>
      <%= f.input :profile_name, input_html: { class: 'form-control' } %>
      <%= f.input :email, input_html: { class: 'form-control' } %>
      <%= f.input :password, input_html: { class: 'form-control' } %>
      <%= f.input :password_confirmation, input_html: { class: 'form-control' } %>
      <div class="form-actions">
        <%= f.submit "Sign up", class: 'btn btn-primary' %><br />
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
</div>
</div>

<%= render "devise/shared/links" %>
