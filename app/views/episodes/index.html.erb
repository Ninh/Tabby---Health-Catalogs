<div class="container">
	<h2>
		<strong>Episodes</strong>
		<%= link_to new_user_episode_path, class: "btn pull-right btn-default btn-lg" do %>
			<span class="glyphicon glyphicon-plus"></span> New Episode
		<% end %>
	</h2>
	<hr>

	<% @episodes.each do |episode| %>
  <div class="col-md-4">
    <div class="thumbnail">
    	<h3><%= episode.name %></h3>
      <%= link_to "View Episode", episode_posts_path(episode) %>
       <%= link_to "Edit", edit_episode_path(episode) %>
       <%= link_to "Delete", episode_path(episode), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>